<Window x:Class="SalesforcePackageSort.TestSuiteConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesforcePackageSort"
        mc:Ignorable="d"
        Title="Test suite configuration" Height="200" Width="256">
    <Grid>
        <Label Content="Keyword" HorizontalAlignment="Left" Margin="22,24,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbtestKeyword" HorizontalAlignment="Left" Margin="85,30,0,0" TextWrapping="Wrap" Text="Test" VerticalAlignment="Top" Width="128"/>
        <Label Content="Include mode" HorizontalAlignment="Left" Margin="22,69,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbContais" Content="contains" HorizontalAlignment="Left" Margin="110,75,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbEnds" Content="ends" HorizontalAlignment="Left" Margin="110,95,0,0" VerticalAlignment="Top"/>
        <Button Name="btDone" Content="Done" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,125,0,0" Click="btDone_Click" >
        </Button>
    </Grid>
</Window>
